<Window x:Class="st_lunch_bill_report.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:st_lunch_bill_report"
        mc:Ignorable="d"
        Title="國立新化高工午餐三聯式繳費單系統" Height="720" Width="960"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4F8"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- 主題色彩 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryHoverColor" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#64748B"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#059669"/>
        <SolidColorBrush x:Key="WarningColor" Color="#D97706"/>
        <SolidColorBrush x:Key="DangerColor" Color="#DC2626"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="InputBackground" Color="#F8FAFC"/>
        
        <!-- GroupBox 樣式 -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.RowSpan="2" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" 
                                                      Opacity="0.08" Direction="270"/>
                                </Border.Effect>
                            </Border>
                            <Border Grid.Row="0" Padding="14,10" 
                                    Background="#F8FAFC" CornerRadius="8,8,0,0"
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="0,0,0,1">
                                <ContentPresenter ContentSource="Header">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </Border>
                            <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 主按鈕樣式 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 次要按鈕樣式 -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 成功按鈕樣式 -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CBD5E1"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 危險按鈕樣式 -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 輸入框樣式 -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 下拉選單樣式 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題區塊 -->
        <Border Grid.Row="0" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="🍱 國立新化高工午餐三聯式繳費單" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="國立新化高工學生餐費繳費單系統" 
                           FontSize="13" Foreground="{StaticResource TextSecondary}" 
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- 資料庫與學年度設定區塊 -->
        <GroupBox Grid.Row="1" Header="📁 資料庫設定">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 資料庫選擇 -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BtnSelectDatabase" Content="選擇資料庫..." 
                            Style="{StaticResource SecondaryButton}" Width="110"
                            Click="BtnSelectDatabase_Click"/>
                    <TextBox x:Name="TxtDatabasePath" Grid.Column="1" Margin="10,0" 
                             IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <Button x:Name="BtnCopyDbPath" Grid.Column="2" Content="複製" 
                            Style="{StaticResource SecondaryButton}" Width="60"
                            Click="BtnCopyDbPath_Click"/>
                </Grid>
                
                <!-- 資料來源選擇 -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="資料來源：" VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                    <ComboBox x:Name="CmbDataSource" Grid.Column="1" Margin="10,0,0,0" 
                              IsEnabled="False" SelectionChanged="CmbDataSource_SelectionChanged"/>
                </Grid>
                
                <!-- 學年度與學期輸入 -->
                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                        Background="#EFF6FF" CornerRadius="8" Padding="16,12" Margin="16,0,0,0"
                        BorderBrush="#BFDBFE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="學年度 / 學期" FontWeight="SemiBold" FontSize="12" 
                                   Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ComboBox x:Name="CmbSchoolYear" Width="65" FontSize="15" FontWeight="Bold"
                                      VerticalContentAlignment="Center">
                                <ComboBoxItem Content="114"/>
                                <ComboBoxItem Content="115"/>
                                <ComboBoxItem Content="116"/>
                                <ComboBoxItem Content="117"/>
                                <ComboBoxItem Content="118"/>
                                <ComboBoxItem Content="119"/>
                                <ComboBoxItem Content="120"/>
                                <ComboBoxItem Content="121"/>
                                <ComboBoxItem Content="122"/>
                                <ComboBoxItem Content="123"/>
                                <ComboBoxItem Content="124"/>
                            </ComboBox>
                            <TextBlock Text="學年度" VerticalAlignment="Center" 
                                       Margin="6,0,16,0" FontSize="13"
                                       Foreground="{StaticResource TextSecondary}"/>
                            <ComboBox x:Name="CmbSemester" Width="50" FontSize="15" FontWeight="Bold"
                                      SelectedIndex="0" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                            <TextBlock Text="學期" VerticalAlignment="Center" 
                                       Margin="6,0,0,0" FontSize="13"
                                       Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- 匯出設定區塊 -->
        <GroupBox Grid.Row="2" Header="📤 匯出設定">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnSelectExportFolder" Content="匯出資料夾..." 
                        Style="{StaticResource SecondaryButton}" Width="110"
                        Click="BtnSelectExportFolder_Click"/>
                <TextBox x:Name="TxtExportFolder" Grid.Column="1" Margin="10,0" 
                         IsReadOnly="True" VerticalContentAlignment="Center"/>
                <Button x:Name="BtnCopyExportPath" Grid.Column="2" Content="複製" 
                        Style="{StaticResource SecondaryButton}" Width="60"
                        Click="BtnCopyExportPath_Click"/>
            </Grid>
        </GroupBox>

        <!-- 報表備註區塊 -->
        <GroupBox Grid.Row="3" Header="📝 報表備註">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="備註說明：" VerticalAlignment="Top" Margin="0,8,0,0"
                           Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                <TextBox x:Name="TxtReportNote" Grid.Column="1" Margin="10,0,0,0" 
                         Height="70" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Text="備註：請於繳費期限內至超商繳費"/>
            </Grid>
        </GroupBox>

        <!-- 動作按鈕區塊 -->
        <GroupBox Grid.Row="4" Header="⚡ 動作">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnPreview" Content="👁 預覽" Width="120" Margin="0,0,12,0" 
                        Style="{StaticResource SecondaryButton}"
                        IsEnabled="False" Click="BtnPreview_Click"/>
                <Button x:Name="BtnExportPdf" Content="📄 匯出 PDF" Width="120" Margin="0,0,12,0" 
                        Style="{StaticResource SuccessButton}"
                        IsEnabled="False" Click="BtnExportPdf_Click"/>
                <Button x:Name="BtnPrint" Content="🖨 列印" Width="120" Margin="0,0,12,0" 
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="False" Click="BtnPrint_Click"/>
                <Button x:Name="BtnExit" Content="✕ 結束程式" Width="120" 
                        Style="{StaticResource DangerButton}"
                        Click="BtnExit_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 處理記錄區塊 -->
        <GroupBox Grid.Row="5" Header="📋 處理記錄">
            <TextBox x:Name="TxtLog" IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"
                     Background="#1E293B" Foreground="#E2E8F0" 
                     BorderThickness="0" Padding="12"/>
        </GroupBox>

        <!-- 狀態列 -->
        <Border Grid.Row="6" Background="{StaticResource CardBackground}" 
                CornerRadius="6" Padding="16,10" Margin="0,12,0,0"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessColor}" 
                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtStatus" Text="就緒" 
                               Foreground="{StaticResource TextPrimary}" FontSize="13"/>
                </StackPanel>
                <TextBlock x:Name="TxtRecordCount" Grid.Column="2" Text="資料筆數：0" 
                           Foreground="{StaticResource TextSecondary}" FontSize="13"/>
            </Grid>
        </Border>
    </Grid>
</Window>
